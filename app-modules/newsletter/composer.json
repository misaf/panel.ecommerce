{
    "name": "misaf/newsletter",
    "description": "Newsletter subscription and mailing system with multi-language support and subscriber management",
    "type": "library",
    "version": "v1.0.2",
    "license": "proprietary",
    "keywords": [
        "laravel",
        "newsletter"
    ],
    "authors": [
        {
            "name": "Misaf",
            "email": "misaf.1990@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "spatie/laravel-translatable": "^6.11.4",
        "misaf/email-webhooks": "^1.0.0",
        "misaf/language": "^1.0.4",
        "spatie/laravel-activitylog": "^4.10.2",
        "spatie/laravel-sluggable": "^3.7.5",
        "spatie/laravel-webhook-client": "^3.4.3",
        "morilog/jalali": "^3.4"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "orchestra/testbench": "^9.0"
    },
    "scripts": {
        "test": "pest"
    },
    "autoload": {
        "psr-4": {
            "Misaf\\Newsletter\\": "src/",
            "Misaf\\Newsletter\\Tests\\": "tests/",
            "Misaf\\Newsletter\\Database\\Factories\\": "database/factories/",
            "Misaf\\Newsletter\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "Misaf\\Newsletter\\Providers\\NewsletterServiceProvider",
                "Misaf\\Newsletter\\Providers\\NewsletterDeferredServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
